<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin portal</title>
    <style>
        .logout {
            font-size: 20px;
            margin-left: 50%;
            margin-top: 20px;
            margin-bottom: 20px;
            padding: 10px;
            /* Add padding for more space */
        }
    </style>



</head>

<body>
    <h1>All Records Of Users</h1>
    <table border="1" width="100%">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>E-Mail</th>
            <th>Password</th>
            <th>Number</th>
        </tr>
        <% if(db_data.length>0){ %>
            <% for(let i=0 ;i<db_data.length ;i++){%>
                <tr>

                    <td> <%- db_data[i].id %></td>
                    <td><%- db_data[i].name %></td>
                    <td><%- db_data[i].email %></td>
                    <td><%- db_data[i].password %></td>
                    <td><%- db_data[i].number %></td>
                    <td>
                    <td>
                        <a class="del" href="#" onclick="confirmAndDelete('<%- db_data[i].id %>')">Delete</a>
                    </td>

                    </td>

                </tr>

                <% }%>

                    <% } else { %>
                        <h1>Records are Empty</h1>
                        <% } %>
                            <a class="logout" href="/record/logout"> logout</a>
    </table>
    <script>
        function confirmAndDelete(recordId) {
            // The confirm method returns true if the user clicks "OK" and false if they click "Cancel"
            if (confirm("Are you sure you want to delete this record?")) {
                window.location.href = "/record/delete?id=" + recordId;
            } else {
                alert("Deletion canceled!");
            }
        }
    </script>
</body>

</html>
<head>
    <title>Admin Update portal</title>
    <link rel="stylesheet" href="update.css">
</head>

<div class="name">
    <div class="a">Update Record</div>
</div>
<div class="form">
    <input type="hidden" name="id" value="<%= disdata[0].id %>">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= disdata[0].name %>">
    </div>
    <div class="form-group">
        <label for="email">E-Mail</label>
        <input type="email" name="email" id="email" value="<%= disdata[0].E_mail %>">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="text" name="password" id="password" value="<%= disdata[0].password %>">
    </div>
    <div class="form-group">
        <label for="number">Number</label>
        <input type="number" name="number" id="number" value="<%= disdata[0].number %>">
    </div>
    <div class="form-group">
        <button class="uprec" onclick="submit()" type="submit" value="submit">Update</button>
    </div>
</div>
<script>
    function submit() {

        let id = document.getElementsByName("id")[0].value;
        let name = document.getElementById("name").value;
        let email = document.getElementById("email").value;
        let password = document.getElementById("password").value;
        let number = document.getElementById("number").value;

        fetch('/update/up_rec', {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                id: id,
                name: name,
                email: email,
                password: password,
                number: number
            })
        })
            .then(response => response)
            .then(response => {
                window.location.href = '/record'
            })


    }


</script>